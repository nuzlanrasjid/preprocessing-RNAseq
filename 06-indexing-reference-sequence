hisat2_extract_splice_sites.py -v \
    refseq/annotation/Mus_musculus_annotation.gtf \ # make sure the PATH
    > refseq/index/splice_sites.txt # make sure the PATH

hisat2_extract_exons.py -v \
    refseq/annotation/Mus_musculus_annotation.gtf \ # make sure the PATH
    > refseq/index/exons.txt # make sure the PATH

hisat2-build referenceData/fasta/Mus_musculus_refseq.fa \
    --ss refseq/index/splice_sites.txt \ # make sure the PATH
    --exon refseq/index/exons.txt \ # make sure the PATH
    refseq/index/Mus_musculus_index.hisat2
